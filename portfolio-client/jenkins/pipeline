pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                ls -la
                docker build -t 499814/test-port-build -f ../Dockerfile-dev .
                '''
            }
        }
        stage('Test') {
            steps {
                sh 'docker run 499814/test-port-build npm run test-docker'
            }
        }
    }
}